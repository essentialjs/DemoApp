extends /layouts/master

block title
  | HTML5 Demo App

block content
  a(href="https://github.com/socketstream/socketstream")
    img(src="/assets/images/logo.png", alt="SocketStream Logo", width=160, height=160)

  h1 Discuss the page

  form#demo(onsubmit="return false")
    h3 Quick Chat Demo
    h5 Open this page in multiple tabs or browsers and type a message below
    #chatlog
    input#myMessage(type="text", autocomplete="off")

block append body-scripts
  script.
    !function() {
        var entry = require('/discuss/entry'),
            ss = require('socketstream');
        ss.load.code('/dynamic/ngDiscuss.js',function() {
            var ngDiscuss = require('/dynamic/ngDiscuss');
            console.log("Angular Discuss",ngDiscuss);
        });
    }();
